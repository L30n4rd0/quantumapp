<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewTitleHistory"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/sub_menu_history"
        style="@style/textViewHeaderStyle" />

    <ScrollView
        android:layout_below="@+id/textViewTitleHistory"
        style="@style/scrollViewDefaultStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:text="@string/quantum_computating_history_text"
                style="@style/textViewContentStyle" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
