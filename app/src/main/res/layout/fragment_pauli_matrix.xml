<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewTitlePauli"
        style="@style/textViewHeaderStyle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/sub_menu_pauli_matrix" />

    <ScrollView
        android:layout_below="@+id/textViewTitlePauli"
        style="@style/scrollViewDefaultStyle" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewPauliText"
                style="@style/textViewContentStyle"
                android:text="@string/pauli_text" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
