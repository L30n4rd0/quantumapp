<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewPi8Title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/sub_menu_pi_8"
        style="@style/textViewHeaderStyle"/>

    <ScrollView
        android:layout_below="@+id/textViewPi8Title"
        style="@style/scrollViewDefaultStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewPi8Text"
                android:text="@string/pi_8_text"
                style="@style/textViewContentStyle" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
